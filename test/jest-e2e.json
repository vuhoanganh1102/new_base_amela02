{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/core/(.*)": "<rootDir>/../libs/core/src/$1",
    "@app/core": "<rootDir>/../libs/core/src",
    "@app/database-type-orm/(.*)": "<rootDir>/../libs/database-type-orm/src/$1",
    "@app/database-type-orm": "<rootDir>/../libs/database-type-orm/src"
  }
}